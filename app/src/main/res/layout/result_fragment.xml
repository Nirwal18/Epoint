<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/school_education_gradient" />
        <TextView android:id="@+id/score_txt"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            app:fontFamily="@font/angelina"
            android:text="Score :"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tquestionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Question:"
                app:fontFamily="@font/courgette_regular"
                android:textSize="19sp"/>
            <TextView android:id="@+id/totalQuestion_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                app:fontFamily="@font/courgette_regular"
                android:textSize="19sp"
                android:text="0"
                android:layout_toRightOf="@id/tquestionLabel"
                android:layout_toEndOf="@id/tquestionLabel"/>
            <TextView android:id="@+id/aQuestionLabel"
                android:layout_below="@id/tquestionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answered:"
                app:fontFamily="@font/courgette_regular"
                android:textSize="19sp"/>
            <TextView android:id="@+id/answeredQuestion_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalQuestion_txt"
                android:layout_toRightOf="@id/aQuestionLabel"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:textSize="19sp"
                app:fontFamily="@font/courgette_regular"
                android:text="0"
                android:layout_toEndOf="@id/aQuestionLabel" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>
    <ListView
        android:id="@+id/resultListView_rcyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"/>
</LinearLayout>